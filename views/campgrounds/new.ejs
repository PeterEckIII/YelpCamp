<% include ../partials/header %>

<div class="container">
  <h1 style="text-align:center;">New Campground</h1>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <label for="name">Campground Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter a name">
        </div>
        <div class="form-group">
          <label for="price">Campground Price</label>
          <input type="number" id="price" name="price" class="form-control" placeholder="Price" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <label for="image">Image URL</label>
          <input type="text" id="image" name="image" class="form-control" placeholder="Enter an image">
        </div>
        <div class="form-group">
          <label for="description">Campground Info</label>
          <input type="text" id="description" name="description" class="form-control" placeholder="Add a description">
        </div>
        <button type="submit" class="btn btn-primary" style="width:100%;">Add</button>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
