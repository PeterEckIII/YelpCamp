<% include ../partials/header %>

<div class="container">
  <h1 style="text-align:center;">Edit Comment - <%= campground.name %></h1>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="campground[name]">Campground Name</label>
          <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control">
        </div>
        <div class="form-group">
          <label for="price">Campground Price</label>
          <input type="number" id="price" name="campground[price]" class="form-control" value="<%= campground.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <label for="campground[image]">Image URL</label>
          <input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control">
        </div>
        <div class="form-group">
          <label for="campground[description]">Campground Info</label>
          <input type="text" name="campground[description]" value="<%= campground.description %>" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary" style="width:100%;">Add</button>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
