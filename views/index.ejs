<% include partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp</h1>
                <p>View some of the best campgrounds from around the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
                </p>
            </div>
        </header>
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground) { %>
                <div class="col-md-4 col-sm-6">
                    <div class="img-thumbnail">
                        <img class="images" style="height:100%; width:100%;" src="<%= campground['image'] %>">
                        <div class="caption">
                            <h4><%= campground['name'] %></h4>
                        </div>
                        <p>
                            <a class="btn btn-info" href="/campgrounds/<%= campground._id %>">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<% include partials/footer %>
